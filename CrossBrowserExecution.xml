<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Cross Browser Execution" parallel="tests" thread-count="6">

	<listeners>
		<listener class-name="com.utils.MyListener"/>
		<listener class-name="com.utils.MyAutoRetry" />
	</listeners>

	<test name="Chrome Execution Test" >
		<parameter name="browser" value="chrome" />
		<classes>
		<class name="com.ecommerce.Flipkart" />
			<class name="com.ecommerce.Flipkart" />
			<class name="com.ecommerce.AmazonTest" />
			<class name="com.socialapps.Google" />
			<class name="com.socialapps.Facebook" />
			<class name="com.food.BBQ" />
			<class name="com.food.Zomato" />
		</classes>
	</test>
	
	<test name="Edge Execution Test" >
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.tests.socialapps.FaceBookTest" />
			<class name="com.tests.ecommerce.FlipkartTest" />
			<class name="com.tests.food.BBQNationTest" />
			<class name="com.tests.food.ZomatoTest" />
			<class name="com.tests.ecommerce.AmazonTest" />
			<class name="com.tests.socialapps.GoogleTest" />
		</classes>
	</test>

</suite> 

